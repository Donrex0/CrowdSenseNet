<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Primary Button -->
    <style name="Widget.CrowdSenseNet.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.CrowdSenseNet.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_light</item>
    </style>

    <!-- Title Text -->
    <style name="TextAppearance.CrowdSenseNet.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Subtitle -->
    <style name="TextAppearance.CrowdSenseNet.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

</resources>